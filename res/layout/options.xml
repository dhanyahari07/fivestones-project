<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:scrollbars="vertical"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">
	<TableLayout android:orientation="vertical"
	             android:layout_height="fill_parent"
	             android:layout_width="fill_parent">
	   <TableRow android:background="#444444">
	      <TextView android:id="@+options/options"
	                android:layout_height="wrap_content"
	                android:layout_width="fill_parent"
	                android:textColor="#fff"
	                android:text="@string/options"
	                android:textSize="16dp"
	                android:paddingLeft="10dp"/>
	   </TableRow>
	   <TableRow android:background="#555555">
	       <TextView android:layout_width="fill_parent"
	                 android:layout_height="1dp"/>
	   </TableRow>
	   <TableRow android:paddingBottom="20dp"
	            android:paddingTop="20dp"
	            android:clickable="true">
	      <TextView android:id="@+options/sens"
	                android:layout_height="wrap_content"
	                android:layout_width="fill_parent"
	                android:textSize="20dp"
	                android:textColor="#fff"
	                android:text="@string/sens"
	                android:layout_weight="1"
	                android:paddingLeft="10dp"
	                android:paddingRight="20dp"/>
	      <SeekBar android:id="@+options/seekbarsens"
	               android:layout_height="wrap_content"
	               android:layout_width="fill_parent"
	               android:layout_weight="2"
	               style="?android:attr/progressBarStyleHorizontal"
	               android:max="4"
	               android:layout_gravity="center_vertical"
	               android:paddingRight="15dp"/>
	   </TableRow>
	   <TableRow android:background="#222222">
	       <TextView android:layout_width="fill_parent"
	                 android:layout_height="1dp"/>
	   </TableRow>
	   <ListView android:id="@+options/listOther"
	             android:divider="#222222"
	             android:dividerHeight="1dp"
	             android:textColor="#fff"
	             android:background="#000"
	             android:layout_height="195dp"
	             android:layout_width="fill_parent"/>
	   <TableRow android:background="#444444">
	      <TextView android:id="@+options/quality"
	                android:layout_height="wrap_content"
	                android:layout_width="fill_parent"
	                android:textColor="#fff"
	                android:text="@string/quality"
	                android:textSize="16dp"
	                android:paddingLeft="10dp"/>
	   </TableRow>
	   <ListView android:id="@+options/listQuality"
	             android:divider="#222222"
	             android:dividerHeight="1dp"
	             android:textColor="#fff"
	             android:background="#000"
	             android:layout_height="132dp"
	             android:layout_width="fill_parent"/>
	   <TableRow android:background="#444444">
	      <TextView android:id="@+options/style"
	                android:layout_height="wrap_content"
	                android:layout_width="fill_parent"
	                android:textColor="#fff"
	                android:text="@string/style"
	                android:textSize="16dp"
	                android:paddingLeft="10dp"/>
	   </TableRow>
	   <ListView android:id="@+options/listStyle"
	             android:divider="#222222"
	             android:dividerHeight="1dp"
	             android:textColor="#fff"
	             android:background="#000"
	             android:layout_height="195dp"
	             android:layout_width="fill_parent"/>
	   <TableRow android:background="#444444">
	      <TextView android:id="@+options/language"
	                android:layout_height="wrap_content"
	                android:layout_width="fill_parent"
	                android:textColor="#fff"
	                android:text="@string/language"
	                android:textSize="16dp"
	                android:paddingLeft="10dp"/>
	   </TableRow>
	   <ListView android:id="@+options/listLanguage"
	             android:divider="#222222"
	             android:dividerHeight="1dp"
	             android:textColor="#fff"
	             android:background="#000"
	             android:layout_height="132dp"
	             android:layout_width="fill_parent"/>
	</TableLayout>
</ScrollView>