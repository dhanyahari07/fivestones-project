<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="20px"
              android:background="@drawable/background"
              android:id="@+status/statuswindow">
     <AnalogClock android:id="@+status/aclock"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
     <DigitalClock android:id="@+status/dclock"
                   android:textSize="32px"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
     <TextView android:id="@+status/bat"
               android:text="@string/battery"
               android:paddingTop="20px"
               android:layout_height="50px"
               android:layout_width="wrap_content"
               android:textSize="18px"
               android:textColor="#000"
               android:gravity="center_vertical"/>
     <ProgressBar android:id="@+status/battery"
                  android:layout_width="200px"
                  android:layout_height="wrap_content"
                  style="?android:attr/progressBarStyleHorizontal"
                  android:max="100"/>
     <TextView android:id="@+status/sig"
               android:text="@string/signal"
               android:paddingTop="20px"
               android:layout_height="50px"
               android:layout_width="wrap_content"
               android:textSize="18px"
               android:textColor="#000"
               android:gravity="center_vertical"/>
     <ProgressBar android:id="@+status/signal"
                  android:paddingBottom="30px"
                  android:layout_width="200px"
                  android:layout_height="wrap_content"
                  style="?android:attr/progressBarStyleHorizontal"
                  android:max="105"/>
     <Button android:id="@+status/back"
             android:text="@string/back"
             android:layout_height="wrap_content"
             android:layout_width="100px"
             android:onClick="onClick"/>
</LinearLayout>
